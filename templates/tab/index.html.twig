{% extends 'templateBootstrap.html.twig' %}

{% block tail_title %}Hello TabController!{% endblock %}
{% block page_title %} N O T E S {% endblock %}

{% block body %}
<div>
    <table class="table">
    {% for note in notes %}
        <tr>
            <td>{{ note }}</td>
        </tr>
    {% endfor %}
    </table>
    <div class="alert alert-info">
        <p>Note Min : {{ min(notes) }}</p>
        <p>Note Max : {{ max(notes) }}</p>
        <p>Nb Notes : {{ notes | length }}</p>
    </div>
</div>
{% endblock %}
