{% extends 'templateBootstrap.html.twig' %}

{% block tail_title %}Hello TabController!{% endblock %}

{% block page_title %} U S E R S {% endblock %}

{% block body %}
{{include('fragments/date-jour.html.twig')}}
<div class="alert alert-warning">
    <a href="{{ path('app_tab' , {nb : 7}) }}">Notes</a>
</div>
<table class="table">
    <tr class="table-active">
        <td>Firstname</td>
        <td>Name</td>
        <td>Age</td>
        <td>Message</td>
    </tr>
    {% for user in users %}
        <tr class="table-{%if loop.index is odd %}warning{%else%}danger{%endif%}">
            <td>{{ user.firstname }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.age }}</td>
            <td>{{ render(controller('App\\Controller\\MyFirstController::sayHello', {firstname: user.firstname , name: user.name})) }}</td>
        </tr>
    {% endfor %}
</table>
{% endblock %}
